$('.answer-errors').html('<%= render 'shared/errors', resource: answer %>');

<% if answer.persisted? %>
  $('.answers').append('<%= j render answer %>');
  $('.notice').text('<%= notice %>');
  $('.new-answer #answer_body').val('');
  fileForm = $('.new-answer-files #answer_files');
  fileForm.val('');
  fileForm.prop('disabled', false);
<% end %>
